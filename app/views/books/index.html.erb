<h1>本の一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">書籍名</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.book_name, book_path(book) %></td>
        <td><%= book.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '本を新しく登録する', new_book_path, class: 'btn btn-primary mb-1' %>
