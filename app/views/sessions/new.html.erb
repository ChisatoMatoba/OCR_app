<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :login_name %>
  </p>
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit "Log in" %>
  </p>
<% end %>
